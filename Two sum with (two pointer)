   int arr[] = {1,3,1,5};

        int sum = 4;
  
        Arrays.sort(arr);
 
       int l = 0;
       int r = arr.length-1;

       while(l < r){
          
          int s = arr[l]+arr[r];

          if(s == sum){
            System.err.println(l + " " + r);
            l++;
            r--;
          }else if(s<sum){
             l++;
          }
          else{
            r--;
          }

       }
       
